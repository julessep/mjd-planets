<div class="planet">
	{{#each planets}}
		<h1>{{name}} </h1>
		<p>First Record: {{firstRecord}} </p>
		<p>Mass: {{mass}} </p>
		<p>Equitorial Diameter: {{equitorialDiameter}} </p>
		<p>Distance from Sun: {{distanceFromSun}} </p>
		<p>Atmosphere: {{surfaceTemperature}} </p>
		<p>Known Moons: {{knownMoons}} </p>
		<p>Orbiting Satellites: {{orbitingSatellites}} </p>
	{{/each}}
</div>;